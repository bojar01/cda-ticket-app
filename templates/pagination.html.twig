<nav aria-label="Page navigation m-auto">

    {# {{ dump(pagination)}} #}

    {{ dump(pageCount) }}

    <ul class="pagination">
        {% if previous is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({(pageParameterName): previous})) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
            </li>
        {% endif %}

        {# {{ dump(pagination.next) }} #}

        {% for page in 1..pageCount %}
            <li class="page-item{{ page == current ? ' active' : '' }}">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% endfor %}

        {% if next is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({(pageParameterName): next})) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
            </li>
        {% endif %}
    </ul>
</nav>