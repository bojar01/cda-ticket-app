<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;0,1000;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900;1,1000&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="{{asset('css/styles.css')}}">
        {% block stylesheets %}
            {{ ux_controller_link_tags() }}
        {% endblock %}

        {% block javascripts %}
{% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block bg-main-color text-white sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column text-white">
                        <li class="nav-item">
                            <div>ARINFO TICKET MANAGER</div>
                        </li>
                        <li class="nav-item my-2">
                            <a class="nav-link text-white" href="{{ path('home') }}">Dashboard</a>
                        </li>
                        <li class="nav-item my-2">
							<span>Ticket</span>
							<ul class="nav flex-column">
								<li class="nav-item">
									<a class="nav-link text-white" href="{{ path('app_search') }}">Recherche</a>
								</li>
								<li>
									<a class="nav-link text-white" href="{{ path('app_ticket_new') }}">Créer un ticket</a>
								</li>
							</ul>
                            
                        </li>
						<li class="nav-item my-2">
							<span>Admin</span>
							<ul class="nav flex-column">
								<li class="nav-item">
									<a class="nav-link text-white" href="{{ path('app_user_index') }}">Utilisateurs</a>
								</li>
								<li>
									<a class="nav-link text-white" href="{{ path('app_technology_index') }}">Sessions</a>
								</li>
								<li>
									<a class="nav-link text-white" href="{{ path('app_session_index') }}">Technologie</a>
								</li>
							</ul>
						</li>
                        <li class="nav-item my-2">
                            <span>Mon compte</span>
							<ul class="nav flex-column">
								<li class="nav-item">
									<a class="nav-link text-white" href="{{ path('app_ticket_new') }}">Gérer mon compte</a>
								</li>
							</ul>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-white" href="{{ path('app_logout') }}">Me déconnecter</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                {% block body %}{% endblock %}
            </main>
        </div>
    </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </body>
</html>
